#!/bin/sh

export PREFIX=""
if [ -d 'venv' ] ; then
    export PREFIX="venv/bin/"
fi

if [ -z $GITHUB_ACTIONS ]; then
    set +e
    scripts/check
    while [ $? -ne 0 ]; do
        read -p "Running 'scripts/check' failed. Do you want to run 'scripts/lint' now? " yn
        case $yn in
           [Yy]* ) :;;
           * ) exit;;
        esac
        scripts/lint
        scripts/check
    done
fi

set -ex

${PREFIX}pytest $@
